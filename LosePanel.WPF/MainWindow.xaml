<Window x:Class="LosePanel.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LosePanel.WPF"
        mc:Ignorable="d"
        Title="洛书面板" Height="450" Width="800"
        FontFamily="pack://application:,,,/Resources/SHN.otf#思源黑体 Normal" FontSize="14">
    
    <!--
    字体 FontFamily
    * 粗体： FontFamily="pack://application:,,,/Resources/SHB.otf#思源黑体"
    * 常规： FontFamily="pack://application:,,,/Resources/SHN.otf#思源黑体 Normal"
    -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl TabStripPlacement="Left">
            <TabItem Header="在线">
                
            </TabItem>
            <TabItem Header="日志">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition MinWidth="200"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label FontSize="20"
                               Padding="10,10,0,0"
                               FontFamily="pack://application:,,,/Resources/SHB.otf#思源黑体">服务器日志</Label>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBlock x:Name="txbServerLog" Grid.Row="1" Padding="10,10,10,10"/>
                        </ScrollViewer>
                    </Grid>

                    <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Center" Background="#FFCDCDCD"/>

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label FontSize="20"
                               Padding="10,10,0,0"
                               FontFamily="pack://application:,,,/Resources/SHB.otf#思源黑体">面板日志</Label>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBlock x:Name="txbAppLog" Padding="10,10,10,10" Width="Auto" TextWrapping="NoWrap"/>
                        </ScrollViewer>
                        
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="设置">
                <ScrollViewer>
                    <StackPanel>
                        <Expander Header="数据源" FontFamily="pack://application:,,,/Resources/SHB.otf#思源黑体">
                            <StackPanel>
                                <TextBlock TextWrapping="Wrap" FontFamily="pack://application:,,,/Resources/SHN.otf#思源黑体 Normal" FontSize="12">
                                    选择面板数据来源。您可以将自定义数据源放置在面板目录中 DataProviders 文件夹下。
                                </TextBlock>
                                <DockPanel Margin="0,5,0,5">
                                    <TextBlock FontSize="12" FontFamily="pack://application:,,,/Resources/SHN.otf#思源黑体 Normal"
                                       DockPanel.Dock="Left">选择数据源：</TextBlock>
                                    <ComboBox x:Name="cmbDataProviders" DockPanel.Dock="Right" FontSize="12"/>
                                </DockPanel>
                            </StackPanel>
                        </Expander>
                        <Expander Header="刷新频率" FontFamily="pack://application:,,,/Resources/SHB.otf#思源黑体">
                            <StackPanel>
                                <TextBlock TextWrapping="Wrap" FontFamily="pack://application:,,,/Resources/SHN.otf#思源黑体 Normal" FontSize="12">
                                    数据刷新频率，单位为秒。最低为 1，最高为 60。注意，这是面板从数据源获得数据的频率，并非数据源更新数据的频率。
                                </TextBlock>
                                <Grid Margin="0,5,0,5" Height="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="sldRefreshFrequency" Grid.Column="0"
                                            TickPlacement="TopLeft" TickFrequency="1" IsSnapToTickEnabled="True"
                                            Maximum="60" Minimum="1"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding ElementName=sldRefreshFrequency,Path=Value}"
                                               FontSize="12"
                                               FontFamily="pack://application:,,,/Resources/SHN.otf#思源黑体 Normal"/>
                                </Grid>
                                
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!--底部栏-->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Background="DodgerBlue">
            <Label Foreground="White" >在线玩家</Label>
            <Label x:Name="lblOnlinePlayerNumber" Foreground="White" >0</Label>
        </StackPanel>

    </Grid>
</Window>
