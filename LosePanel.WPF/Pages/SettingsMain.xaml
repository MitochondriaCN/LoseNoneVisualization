<Page x:Class="LosePanel.WPF.Pages.SettingsMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LosePanel.WPF.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="设置首页" Style="{StaticResource NormalPage}">

    <ScrollViewer Height="Auto" Margin="20">
        <StackPanel x:Name="stackPanel" Height="Auto">
            <Label Style="{StaticResource TitleLabel}">设置</Label>
            <Label Style="{StaticResource SecondaryLabel}">常规</Label>
            <Button x:Name="btnstDataProvider" Click="btnstDataProvider_Click" 
                    Style="{DynamicResource MaterialDesignFlatMidBgButton}"
                    HorizontalAlignment="Left"
                    Width="{Binding ActualWidth, ElementName=stackPanel, Mode=OneWay}">数据源</Button>
            <Button x:Name="btnstLog" Click="btnstLog_Click"
                    Style="{DynamicResource MaterialDesignFlatMidBgButton}"
                    HorizontalAlignment="Left"
                    Width="{Binding ActualWidth, ElementName=stackPanel, Mode=OneWay}">日志</Button>
            <Label Style="{StaticResource SecondaryLabel}">开发者选项</Label>
            <Button x:Name="btnstViewFile" Click="btnstViewFile_Click"
                    Style="{DynamicResource MaterialDesignFlatMidBgButton}"
                    HorizontalAlignment="Left"
                    Width="{Binding ActualWidth, ElementName=stackPanel, Mode=OneWay}">查看设置文件</Button>
        </StackPanel>
    </ScrollViewer>
</Page>
