<Page x:Class="LosePanel.WPF.Pages.setLog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LosePanel.WPF.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="设置 - 日志" Loaded="Page_Loaded"
      Style="{StaticResource NormalPage}">

    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Style="{StaticResource TitleLabel}">日志</Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Style="{StaticResource SecondaryLabel}">保存日志</Label>
                <ToggleButton x:Name="tgbSaveLogs" Grid.Column="1"
                          Style="{DynamicResource MaterialDesignSwitchToggleButton}"/>
            </Grid>
            <Label>自动将软件日志和服务器日志保存到单独的文件。</Label>
            <Button x:Name="btnstSaveAndRestart" HorizontalAlignment="Right" Click="btnstSaveAndRestart_Click">保存并重启软件</Button>
        </StackPanel>
    </ScrollViewer>
</Page>
